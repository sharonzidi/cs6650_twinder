<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>SwipeServlet</servlet-name>
        <servlet-class>edu.northeastern.SwipeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MatchesServlet</servlet-name>
        <servlet-class>edu.northeastern.MatchesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatsServlet</servlet-name>
        <servlet-class>edu.northeastern.StatsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HealthServlet</servlet-name>
        <servlet-class>edu.northeastern.HealthServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SwipeServlet</servlet-name>
        <url-pattern>/swipe/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MatchesServlet</servlet-name>
        <url-pattern>/matches/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatsServlet</servlet-name>
        <url-pattern>/stats/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HealthServlet</servlet-name>
        <url-pattern>/health</url-pattern>
    </servlet-mapping>

</web-app>